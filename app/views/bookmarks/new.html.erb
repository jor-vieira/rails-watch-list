<div class="container mt-3">
  <h1>Add a movie to <%= @list.name %></h1>

  <div class="card mb-4">
  <div class="card-body">
    <h3>Search for a movie</h3>
    <%= form_tag search_movies_path, method: :get, remote: true, id: "movie-search-form" do %>
      <%= text_field_tag :query, nil, placeholder: "Search for a movie...", class: "form-control mb-2" %>
      <%= submit_tag "Search", class: "btn btn-primary mb-3" %>
    <% end %>
    <div id="movie-results" class="mt-3"></div>
  </div>
</div>

  <%= simple_form_for [@list, @bookmark] do |f| %>
    <%= f.input :movie_id, as: :hidden %>
    <%= f.input :comment %>
    <%= f.submit "Add movie", class: "btn btn-primary" %>
  <% end %>

  <%= link_to "Back to list", list_path(@list), class: "btn btn-secondary mt-3" %>
</div>
