<div class="banner"></div>
<div class="container mt-3">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <%= link_to "Create a new list", new_list_path, class: "btn btn-primary new-list-btn" %>
  </div>
</div>

<div class="row g-4">
  <% @lists.each do |list| %>
    <div class="col-md-4">
      <div class="card h-100 shadow-lg rounded-5 mx-3" style="border: 2px solid #bead9a; background-color: transparent;">
        <div class="card-body">
          <h5 class="card-title"><%= list.name %></h5>
          <p class="card-text"><%= pluralize(list.movies.count, 'movie') %></p>

          <%= link_to "View movies", list_path(list), class: "btn btn-primary new-list-btn" %>


          <%= link_to "Delete List", list_path(list), data:  { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this list?" }, class: "btn btn-danger ms-2"%>
        </div>
      </div>
    </div>
  <% end %>
</div>
